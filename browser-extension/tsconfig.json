{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["chrome", "webextension-polyfill", "vitest/globals"],
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "*.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}