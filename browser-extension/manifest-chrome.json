{
  "manifest_version": 3,
  "name": "Forktimize - Smart Meal Planning (TypeScript)",
  "version": "1.0.0",
  "description": "Plan optimal meals based on nutritional constraints and food vendor availability",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://forktimize.vercel.app/*",
    "http://localhost:5173/*",
    "https://rendel.cityfood.hu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://forktimize.vercel.app/*",
        "http://localhost:5173/*",
        "http://127.0.0.1:5173/*"
      ],
      "js": ["content-forktimize.js"]
    },
    {
      "matches": [
        "https://rendel.cityfood.hu/*"
      ],
      "js": ["content-vendors.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Forktimize Meal Planner (TS)"
  }
}