{
  "manifest_version": 2,
  "name": "Forktimize - Smart Meal Planning (TypeScript)",
  "version": "1.0.0",
  "description": "Plan optimal meals based on nutritional constraints and food vendor availability",
  "permissions": [
    "storage",
    "activeTab",
    "https://forktimize.vercel.app/*",
    "http://localhost:5173/*",
    "http://127.0.0.1:5173/*",
    "http://localhost/*",
    "https://rendel.cityfood.hu/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://forktimize.vercel.app/*",
        "http://localhost:5173/*",
        "http://127.0.0.1:5173/*",
        "http://localhost/*"
      ],
      "js": ["content-forktimize.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://rendel.cityfood.hu/*"
      ],
      "js": ["content-vendors.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Forktimize Meal Planner (TS)"
  },
  "applications": {
    "gecko": {
      "id": "forktimize-ts@forktimize.xyz"
    }
  }
}